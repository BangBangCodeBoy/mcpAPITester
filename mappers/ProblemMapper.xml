<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codeboy.mvc.model.dao.ProblemDao">
    <select id="selectProblem" resultType="Problem" parameterType="map" >
        SELECT *
        FROM problem
        WHERE category = #{category}
        ORDER BY RAND()
        LIMIT #{limit};
    </select>

</mapper>